<%= turbo_frame_tag ticket do %>
  <div id="<%= dom_id ticket, :wrapper %>">
    <p class="my-5">
      <strong class="block font-medium mb-1">Title:</strong>
      <%= ticket.title %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= ticket.description %>
    </p>

  </div>

  <%= link_to "Edit this ticket", edit_ticket_path(ticket), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= button_to "Destroy this ticket", ticket, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?", turbo_frame: "_top" } %>
<% end %>


